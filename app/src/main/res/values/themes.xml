<resources>
    <!-- Base application theme. -->
    <style name="Theme.MyWalkingPet" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#003700B3</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="NumberPickerStyle"> <!-- 넘버피커 스타일 -->
        <!-- 글자 크기 -->
        <item name="android:textSize">20sp</item>
        <!-- 색상변경 -->
        <item name="android:textColorPrimary">@color/dark_gray</item>
    </style>

    <style name="Theme.MyWalkingPet.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MyWalkingPet.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyWalkingPet.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>