<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 그림자 효과를 위한 아래쪽 layer -->
    <item >
        <shape
            android:shape="rectangle">
            <solid android:color="#40000000"/> <!-- 그림자 색상 -->
            <corners android:radius="10dp"/>
            <padding
                android:right="2dp"
                android:bottom="2dp"/>
        </shape>
    </item>

    <!-- 실제 배경을 위한 위쪽 layer -->
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="@color/background_orange_btn"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
</layer-list>
