<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="17dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상품 구매"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/ivItem"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/tvItemName"
        android:layout_marginStart="30dp"
        android:text="아이템 이름"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/ivItem"
        app:layout_constraintTop_toTopOf="@id/ivItem"/>

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tvItemPrice"
        android:layout_marginStart="30dp"
        android:text="아이템 가격"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/ivItem"
        app:layout_constraintTop_toBottomOf="@id/tvItemName"/>

    <TextView
    android:layout_marginTop="10dp"
    android:id="@+id/tvItemEffect"
        android:layout_marginStart="30dp"
    android:text="아이템 효과"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toEndOf="@id/ivItem"
    app:layout_constraintTop_toBottomOf="@id/tvItemPrice"/>

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tvItemValue"
        android:layout_marginStart="30dp"
        android:text="아이템 효과 값"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tvItemEffect"
        app:layout_constraintTop_toBottomOf="@id/tvItemPrice"/>

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tvItemInfo"
        android:layout_marginStart="30dp"
        android:text="아이템 정보"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/ivItem"
        app:layout_constraintTop_toBottomOf="@id/tvItemEffect"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvItemNum"
        android:layout_marginTop="20dp"
        android:text="1"
        app:layout_constraintStart_toStartOf="@id/ivItem"
        app:layout_constraintEnd_toEndOf="@id/ivItem"
        app:layout_constraintTop_toBottomOf="@id/ivItem"/>

    <ImageButton
        android:layout_marginStart="15dp"
        android:id="@+id/ibAdd"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toEndOf="@id/tvItemNum"
        app:layout_constraintTop_toTopOf="@id/tvItemNum"
        app:layout_constraintBottom_toBottomOf="@id/tvItemNum" />

    <ImageButton
        android:layout_marginEnd="15dp"
        android:id="@+id/ibSubtract"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toStartOf="@id/tvItemNum"
        app:layout_constraintTop_toTopOf="@id/tvItemNum"
        app:layout_constraintBottom_toBottomOf="@id/tvItemNum" />

    <Button
        android:id="@+id/btnOK"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="구매"
        app:layout_constraintTop_toBottomOf="@id/tvItemInfo"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:layout_marginEnd="20dp"
        android:id="@+id/btnCancel"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취소"
        app:layout_constraintTop_toBottomOf="@id/tvItemInfo"
        app:layout_constraintEnd_toStartOf="@id/btnOK" />


</androidx.constraintlayout.widget.ConstraintLayout>