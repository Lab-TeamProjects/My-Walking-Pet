<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mission.MissionFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="30dp"
            app:cardElevation="5dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:text="오늘의 미션"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/bg_corner_rectangle">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvMissionName1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="미션 명"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/tvMissionReward1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="미션 보상"
                                android:layout_weight="1"
                                android:gravity="right"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">
                            <ProgressBar
                                android:id="@+id/pbMissionBar1"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:max="100"
                                android:progress="50" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/bg_corner_rectangle">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvMissionName2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="미션 명"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/tvMissionReward2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="미션 보상"
                                android:layout_weight="1"
                                android:gravity="right"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">
                            <ProgressBar
                                android:id="@+id/pbMissionBar2"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:max="100"
                                android:progress="25" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/bg_corner_rectangle">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvMissionName3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="미션 명"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/tvMissionReward3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="미션 보상"
                                android:layout_weight="1"
                                android:gravity="right"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">
                            <ProgressBar
                                android:id="@+id/pbMissionBar3"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:max="100"
                                android:progress="75" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="30dp"
            app:cardElevation="5dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="20sp"
                    android:layout_gravity="center_horizontal"
                    android:text="주간 미션"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>



</FrameLayout>