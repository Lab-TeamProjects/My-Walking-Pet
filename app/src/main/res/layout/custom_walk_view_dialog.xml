<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="14dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_marginBottom="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2022년 08월 12일"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:textSize="25sp"
        android:id="@+id/tvTitle"/>



    <TextView
        android:textSize="17sp"
        android:layout_marginVertical="7dp"
        android:id="@+id/tvTitleGoalCount"
        android:text="목표 걸음 수: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="17sp"
        android:id="@+id/tvGoalCount"
        app:layout_constraintTop_toTopOf="@id/tvTitleGoalCount"
        app:layout_constraintStart_toEndOf="@id/tvTitleGoalCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="17sp"
        android:layout_marginVertical="7dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitleGoalCount"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTitleWalkCount"
        android:text="걸음 수: "/>

    <TextView
        android:textSize="17sp"
        app:layout_constraintTop_toTopOf="@id/tvTitleWalkCount"
        app:layout_constraintStart_toEndOf="@id/tvTitleWalkCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvWalkCount"/>

    <TextView
        android:textSize="17sp"
        android:layout_marginVertical="7dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitleWalkCount"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTitleTime"
        android:text="시간: "/>

    <TextView
        android:textSize="17sp"
        app:layout_constraintTop_toTopOf="@id/tvTitleTime"
        app:layout_constraintStart_toEndOf="@id/tvTitleTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTime"/>

    <TextView
        android:textSize="17sp"
        android:layout_marginVertical="7dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitleTime"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTitleCalories"
        android:text="소비 칼로리: "/>

    <TextView
        android:textSize="17sp"
        app:layout_constraintTop_toTopOf="@id/tvTitleCalories"
        app:layout_constraintStart_toEndOf="@id/tvTitleCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCalories"/>

    <TextView
        android:textSize="17sp"
        android:layout_marginVertical="7dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitleCalories"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTitleDistance"
        android:text="거리: "/>

    <TextView
        android:textSize="17sp"
        app:layout_constraintTop_toTopOf="@id/tvTitleDistance"
        app:layout_constraintStart_toEndOf="@id/tvTitleDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDistance"/>




</androidx.constraintlayout.widget.ConstraintLayout>