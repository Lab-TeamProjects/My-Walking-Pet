<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="17dp"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:textColor="@color/black"
        android:id="@+id/tvTitle"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘 운동 목표 시간을 설정하세요!"/>

    <Spinner
        android:id="@+id/spExerciseTime"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintEnd_toEndOf="@id/tvTitle" />

    <TextView
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(분)"
        app:layout_constraintStart_toEndOf="@id/spExerciseTime"
        app:layout_constraintTop_toTopOf="@id/spExerciseTime"
        app:layout_constraintBottom_toBottomOf="@id/spExerciseTime"/>

    <Button
        android:id="@+id/btnOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/spExerciseTime"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:layout_marginEnd="20dp"
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취소"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/btnOK"
        app:layout_constraintEnd_toStartOf="@id/btnOK" />



</androidx.constraintlayout.widget.ConstraintLayout>