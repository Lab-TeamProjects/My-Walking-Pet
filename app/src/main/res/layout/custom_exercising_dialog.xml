<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:gravity="center"
        android:textColor="@color/black"
        android:id="@+id/tvTitle"
        android:paddingHorizontal="30dp"
        android:paddingVertical="5dp"
        android:textSize="20sp"
        android:layout_margin="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvCurrent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="현재 운동 중입니다"/>

    <TextView
        android:textColor="@color/black"
        android:gravity="center"
        android:paddingHorizontal="30dp"
        android:paddingVertical="5dp"
        android:id="@+id/tvCurrent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="걸으세요"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/tvSelected"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:textColor="@color/black"
        android:gravity="center"
        android:paddingHorizontal="30dp"
        android:paddingVertical="5dp"
        android:id="@+id/tvSelected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="선택한 시간 : 30 (분)"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/tvCurrent"
        app:layout_constraintBottom_toTopOf="@id/tvSelected"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="30dp" />

    <TextView
        android:layout_marginStart="50dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:id="@+id/tvLastedTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="남은 시간 : 30 (분)"
        android:textSize="18sp"
        android:paddingHorizontal="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingVertical="5dp"
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@id/tvSelected"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>