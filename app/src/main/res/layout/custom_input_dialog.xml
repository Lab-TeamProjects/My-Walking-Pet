<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_dialog_yellow">

    <TextView
        android:gravity="center"
        android:fontFamily="@font/cafe24_ssurround_bold"
        android:textSize="15sp"
        android:text="태어날 동물의 이름을 정해주세요!"
        android:layout_marginVertical="40dp"
        android:id="@+id/tvInfo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp" />

    <EditText
        android:maxLength="6"
        android:textColor="@color/black"
        android:background="@drawable/custom_edittext_gray"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:id="@+id/editText"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvInfo"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginHorizontal="30dp"/>

    <TextView
        android:gravity="center"
        android:fontFamily="@font/cafe24_ssurround_bold"
        android:text="동물 이름은 1~6자의\n영문자, 한글로 적어주세요\n특수 기호는 사용할 수 없습니다!"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:id="@+id/tvNamingRule"
        app:layout_constraintTop_toBottomOf="@id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp" />

    <Button
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/cafe24_ssurround_bold"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:background="@color/transparent"
        android:id="@+id/btnCancel"
        app:layout_constraintEnd_toStartOf="@id/btnOK"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="취소"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/cafe24_ssurround_bold"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:background="@color/transparent"
        android:id="@+id/btnOK"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="확인"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>